<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_viewRecipe"
            app:destination="@id/viewRecipe" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.my_profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.my_favourites.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/recipeAddFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.recipe_add_update.RecipeAddFragment"
        android:label="fragment_recipe_add"
        tools:layout="@layout/fragment_recipe_add" />
    <fragment
        android:id="@+id/viewRecipe"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.view_recipe.recipe_details.ViewRecipe"
        android:label="fragment_view_recipe"
        tools:layout="@layout/fragment_view_recipe">
        <action
            android:id="@+id/action_viewRecipe_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="recipeId"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="android-app://androidx.navigation/com.gtp01.group01.android.recipesmobileapp.feature.view_recipe.recipe_details.ViewRecipe/{recipeId}" />
    </fragment>
    <fragment
        android:id="@+id/ingredientsFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.view_recipe.recipe_details.IngredientsFragment"
        android:label="Ingredients"
        tools:layout="@layout/fragment_ingredients" />
    <fragment
        android:id="@+id/instructionFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.view_recipe.recipe_details.InstructionFragment"
        android:label="Instruction"
        tools:layout="@layout/fragment_instruction" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.my_profile.EditProfileFragment"
        android:label="EditProfileFragment" />
    <fragment
        android:id="@+id/recipeUpdateFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.recipe_delete_update.RecipeUpdateFragment"
        android:label="fragment_recipe_update"
        tools:layout="@layout/fragment_recipe_update">
        <argument
            android:name="recipeId"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink2"
            app:uri="android-app://androidx.navigation/com.gtp01.group01.android.recipesmobileapp.feature.recipe_delete_update.RecipeUpdateFragment/{recipeId}" />
    </fragment>
    <fragment
        android:id="@+id/myRecipesFragment"
        android:name="com.gtp01.group01.android.recipesmobileapp.feature.my_recipes.MyRecipesFragment"
        android:label="MyRecipesFragment" >
        <action
            android:id="@+id/action_myRecipesFragment_to_recipeUpdateFragment"
            app:destination="@id/recipeUpdateFragment" />
    </fragment>
</navigation>