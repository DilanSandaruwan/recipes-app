<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_popup_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/lyt_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_popup"
            android:layout_marginTop="@dimen/margin_top_popup"
            android:layout_marginEnd="@dimen/margin_end_popup"
            android:background="@drawable/bg_rect_grey"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_popup_icon"
                android:layout_width="@dimen/width_image_view_icon_popup"
                android:layout_height="@dimen/height_image_view_icon_popup"
                android:contentDescription="@string/desc_icon_of_success"
                android:src="@drawable/ico_selected_item" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_popup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_title_popup"
                    android:hint="@string/success"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_popup_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_message_popup"
                    android:hint="@string/sample_recipe_saved_successfully" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_popup_close"
                android:layout_width="@dimen/width_image_view_icon_close_popup"
                android:layout_height="@dimen/height_image_view_icon_close_popup"
                android:contentDescription="@string/desc_icon_of_close"
                android:src="@drawable/ic_close_gray" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>