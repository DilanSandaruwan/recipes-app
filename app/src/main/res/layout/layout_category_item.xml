<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/lytCategoryItem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lytMatCardCategoryItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:theme="@style/Theme.RecipesMobileApp"
            app:cardCornerRadius="20dp">

            <com.gtp01.group01.android.recipesmobileapp.shared.utils.ui.RoundedImageView
                android:id="@+id/rimSelectedOrNot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:translationZ="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/ico_unselected_item"
                android:layout_gravity="top|end" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtvCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/sample_category_name"
            android:textColor="@color/black" />
    </LinearLayout>
</layout>